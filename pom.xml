<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.datavyu</groupId>
    <artifactId>sdl-libs</artifactId>
    <version>2.0.8</version>
    <name>SDL-libs 2.0.8</name>
    <description>SDL 2.0.8 Libraries for Windows</description>
    <url>https://github.com/databrary/sdl-libs</url>

    <properties>
        <bintray.repo>datavyu/datavyu</bintray.repo>
        <bintray.package>sdl-libs</bintray.package>
    </properties>

    <!-- Our organisation. -->
    <organization>
        <name>Datavyu Foundation</name>
        <url>http://datavyu.org</url>
    </organization>

    <issueManagement>
        <url>https://github.com/databrary/sdl-libs/issues</url>
        <system>GitHub Issues</system>
    </issueManagement>

    <licenses>
        <license>
            <name>Apache License, Version 3.0</name>
            <url>https://www.gnu.org/licenses/gpl-3.0-standalone.html</url>
            <distribution>repo</distribution>
        </license>
    </licenses>

    <scm>
        <url>https://github.com/databrary/sdl-libs</url>
    </scm>


    <!-- Datavyu Distribution Management Repositories -->
    <!-- Datavyu Distribution Management Repositories -->
    <distributionManagement>
        <repository>
            <id>bintray-datavyu-datavyu</id>
            <name>datavyu-datavyu</name>
            <url>https://api.bintray.com/maven/${bintray.repo}/${bintray.package};publish=1</url>
        </repository>
    </distributionManagement>

    <build>
        <resources>
            <resource>
                <!-- SDL 2.0.8 version -->
                <directory>lib</directory>
                <includes>
                    <include>SDL2.dll</include>
                </includes>
            </resource>
        </resources>
    </build>
</project>